{
  "manifest_version": 3,
  "name": "BK Fact Check",
  "description": "Search for fake news quickly and easily",
  "version": "2.2",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/hcmut_fact_check.png",
    "default_title": "Click Me"
  },
  "icons": {
    "48": "img/hcmut_fact_check.png"
  },
  "permissions": ["contextMenus", "activeTab", "storage"],

  "background": {
      "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}